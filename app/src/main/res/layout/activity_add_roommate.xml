<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.AddRoommateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include layout="@layout/toolbar_add_room"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="City/Province:"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <Spinner
                android:id="@+id/id_city"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:hint="Select City/Province"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="District:"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <Spinner
                android:id="@+id/id_district"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:hint="Select District"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Street:"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <Spinner
                android:id="@+id/id_street"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:hint="Street"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Price:"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/id_price"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:hint="Enter price"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Gender"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <Spinner
                android:id="@+id/id_gender"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:hint="Street"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="20dp">
            <Button
                android:id="@+id/id_button"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="500dp"
                android:text="POST"
                android:background="@drawable/radius"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>