<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_id"
        android:src="@drawable/default_profile"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"/>
    <Button
        android:id="@+id/btn_Select_Photo"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:textColor="@color/text"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/radius"
        android:text="@string/button_select_photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="210dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/tv_name"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_width="@dimen/edt_width"
                android:layout_height="@dimen/edt_height"
                android:layout_marginTop="@dimen/text_marginTop"
                android:ems="10"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="137dp"
                tools:layout_editor_absoluteY="262dp" />
            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_email"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_height"
                    android:paddingTop="8dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="137dp"
                    tools:layout_editor_absoluteY="262dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthday: "
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_birthday"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    tools:layout_editor_absoluteX="137dp"
                    tools:layout_editor_absoluteY="262dp" />
                <Button
                    android:id="@+id/btnpPickDate"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:textColor="@color/text"
                    android:text="Select Date"
                    android:background="@drawable/radius"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hometown: "
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/hometown_id"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="45dp"
                    android:hint="Select country"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender: "
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/gender_id"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:background="@drawable/radius_textbox"
                    android:ems="10"
                    android:hint="Select Gender"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="136dp"
                    tools:layout_editor_absoluteY="393dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone: "
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="300dp"
                    android:layout_height="@dimen/edt_height"
                    android:ems="10"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:paddingTop="5dp"
                    tools:layout_editor_absoluteX="136dp"
                    tools:layout_editor_absoluteY="570dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:background="@drawable/radius"
        android:layout_marginTop="480dp"
        android:layout_gravity="center_horizontal"
        android:text="Update" />
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:background="@drawable/radius"
        android:layout_marginTop="540dp"
        android:layout_gravity="center_horizontal"
        android:text="Log Out" />
</FrameLayout>