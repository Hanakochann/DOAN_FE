<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddRoomActivity"
    android:id="@+id/container.addroom">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <include layout="@layout/toolbar_add_room"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Tỉnh/Thành phố:"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <Spinner
            android:id="@+id/id_city"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:hint="Chọn Tỉnh/Thành phố"
            android:textSize="20dp" />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Quận/Huyện:"
        android:textSize="20dp"
        android:textColor="@color/black"/>
        <Spinner
            android:id="@+id/id_district"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:hint="Chọn Quận/Huyện"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Đường:"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/id_street"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:hint="Nhập tên "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Số:"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/id_number"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:hint="Nhập số"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Loại phòng:"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <Spinner
            android:id="@+id/id_room_type"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:hint="Chọn loại phòng"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Chỗ trống:"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/id_slot"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:hint="Enter số chỗ trống"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Giá:"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/id_price"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:hint="Nhập giá"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Thông tin thêm/Yêu cầu:"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/id_other"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:hint="Nhà vệ sinh, chỗ để xe, chung chủ hay không..." />
        <ImageView
            android:id="@+id/img_upload"
            android:src="@drawable/upload"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"/>
        <Button
            android:id="@+id/btn_Select_Roomphoto"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textColor="@color/text"
            android:background="@drawable/radius"
            android:text="@string/button_select_photo" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/id_button"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="990dp"
                android:background="@drawable/radius"
                android:text="POST" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>