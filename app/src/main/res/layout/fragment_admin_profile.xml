<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0e7a0"
    tools:context=".fragments.ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_id"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_profile" />

    <Button
        android:id="@+id/btn_Select_Photo"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginLeft="142dp"
        android:layout_marginTop="135dp"
        android:background="@drawable/radius"
        android:text="@string/button_select_photo"
        android:textColor="@color/text"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="320dp"
                android:layout_height="@dimen/edt_height"
                android:layout_marginTop="@dimen/text_marginTop"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="137dp"
                tools:layout_editor_absoluteY="262dp" />

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="9dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="137dp"
                    tools:layout_editor_absoluteY="262dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh: "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="137dp"
                    tools:layout_editor_absoluteY="262dp" />

                <Button
                    android:id="@+id/btnpPickDate"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:background="@drawable/radius"
                    android:text="Chọn ngày sinh"
                    android:textColor="@color/text"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Quê quán: "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/hometown_id"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="45dp"
                    android:hint="Select country"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới tính: "
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/gender_id"
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:hint="Select Gender"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại: "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:paddingTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="136dp"
                    tools:layout_editor_absoluteY="570dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="440dp"
        android:background="@drawable/radius"
        android:text="CẬP NHẬP"
        android:textColor="@color/text" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="490dp"
        android:background="@drawable/radius"
        android:text="ĐĂNG XUẤT"
        android:textColor="@color/text" />
</FrameLayout>